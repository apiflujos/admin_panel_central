{
  "name": "admin-central-platform",
  "description": "Multi-tenant middleware for Shopify, Alegra, and marketing operations.",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "node node_modules/typescript/bin/tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "db:migrate": "node dist/scripts/db-migrate.js",
    "db:migrate:dev": "ts-node-dev --transpile-only --exit-child src/scripts/db-migrate.ts",
    "check:frontend": "node --check public/app.js && node --check public/company.js && node --check public/login.js && node --check public/users.js",
    "qa:smoke": "node scripts/qa-smoke.js"
  },
  "dependencies": {
    "bullmq": "^5.67.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.12.0",
    "graphql-http": "^1.22.4",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.2",
    "mongodb": "^6.12.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "pg": "^8.11.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  }
}
